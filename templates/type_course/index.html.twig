{% extends 'base.html.twig' %}

{% block title %}TypeCourse index{% endblock %}

{% block body %}
<section class="section section-lg">
      <img src="{{asset('assetss/img/path4.png')}}" class="path">
     
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-12">
            <h1 class="text-center">Module Management</h1>
            <div class="row row-grid justify-content-center">
            
            </div>
          </div>
        </div>
      </div>
    </section>
 <div class="container-fluid mt--7">
      <!-- Table -->
      <div class="row">
        <div class="col-xl-8 order-xl-1">
          <div class="card shadow">
            <div class="card-header border-0">
    <h1>TypeCourse index</h1>
</div>
            <div class="table-responsive">
          
              <table id="example" class="table align-items-center table-flush table-striped display dataTable">
                <thead class="thead-light">
            <tr>
                
                <th>Name</th>
              {#  <th>Fields_available</th>#}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_course in type_courses %}
            <tr>
                
                <td>{{ type_course.Name }}</td>
              {#  <td>{{ type_course.fieldsAvailable ? type_course.fieldsAvailable|join(', ') : '' }}</td>#}
          
 <td class="actions">

                                    <div class="btn-group">
                                        <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="margin-bottom: 0px;margin-top: 0px">Actions</button>

                                        <div class="dropdown-menu ">
                                            
                                          
                                            <a class="dropdown-item" href="#" onclick="showModal('myModal{{ type_course.id }}')" >
                                            <i class="ni text-primary"><img src="{{ asset('icons_website/delete.png')}}" height="32" widh="32"></img> </i>
                                            Delete</a>
                                             <a class="dropdown-item" href="{{ path('type_course_edit', { 'id': type_course.id}) }}">
                                             <i class="ni text-primary"><img src="{{ asset('icons_website/edit.png')}}" height="32" widh="32"></img> </i>
                                             Edit</a>
                                            
                                    </div>
                                </td>
                    
                

                 <div id="myModal{{type_course.id }}" class="modal fade" role="dialog">
                                <div class="modal-dialog">
                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title">Delete Confirmation</h4>
                                        </div>
                                        <div class="modal-body">
                                            <p>Do you really want to delete this type!</p>
                                        </div>
                                        <div class="modal-footer">
                                        <form method="post" action="{{ path('type_course_delete', {'id': type_course.id}) }}">
                                            <button type="button" class="btn btn-default btn-md" data-dismiss="modal">Close</button>
                                             <input type="hidden" name="_method" value="DELETE">
                                             <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ type_course.id) }}">
                                             <button type="submit" class="btn btn-danger btn-md">Delete</button>
                                             </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
    <script>
        function showModal(id) {
            $("#"+id).modal();
        }
    </script>

    <script type="text/javascript">
    var host = "startbootstrap.com";
    if ((host == window.location.host) && (window.location.protocol != "https:"))
      window.location.protocol = "https";
  </script>

  <script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>

  <script>
$(document).ready( function () {
    $("#exemple").DataTable();
} );
</script>
<script type="text/javascript">
				 $(document).ready(function() {
    $('#example').DataTable( {
        "order": [[ 3, "desc" ]]
    } );
} );
	</script>


</div></div></div></div>
