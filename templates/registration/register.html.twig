        </div>
        <script type="text/javascript">
       
                $('#datetimepicker4').datepicker();
          
        </script>
    </div>
    </div>
  #}
{% endblock %}

{% block javascripts %}
{{parent()}}
 <script>
$('.datetimepicker').datetimepicker({
    icons: {
        time: "fa fa-clock-o",
        date: "fa fa-calendar",
        up: "fa fa-chevron-up",
        down: "fa fa-chevron-down",
        previous: 'fa fa-chevron-left',
        next: 'fa fa-chevron-right',
        today: 'fa fa-screenshot',
        clear: 'fa fa-trash',
        close: 'fa fa-remove'
    }
});
</script>
 {% endblock %}


