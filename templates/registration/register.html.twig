{% extends "layoutregister.html.twig" %}


{% block body%}
  <style>
    select{
      text-transform: inherit; /* font-size: 3em; */
      /* font-weight: bold; */
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
          }
    input{
      text-transform: inherit; /* font-size: 3em; */
      /* font-weight: bold; */
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
          }
  </style>
  {{ form_start(form) }}
            <div class="row" style="margin-top:115px;margin-bottom:100px;">
            
               <div class="col-1"></div>
                <div class="col-10">
                
                    <p  style="font-size:40px;" class="text-white">Register</p>
                     <div class="row">
                        <div class="col-1">
                            <p class="text-white" style="font-size:15px;">Email</p>
                        </div>
                        <div class="col-4">
                             {{ form_widget(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="col-2"  >
                            <p class="text-white" style="font-size:15px;">Password</p>
                        </div>
                        <div class="col-4"style="padding-left:20px;">
                            {{ form_errors(form.Password.first) }}
                            {{ form_widget(form.Password.first) }}
                        </div>
                    </div> 
                    <div class="row" style="margin-top:20px;">
                      <div class="col-3"  >
                            <p class="text-white" style="font-size:15px;">Repeat Password</p>
                        </div>
                        <div class="col-8"style="">
                             {{ form_errors(form.Password.second) }}
                              {{ form_widget(form.Password.second) }}
                        </div>
                    </div>
                    <div class="row" style="margin-top:20px;">
                      <div class="col-1"  >
                            <p class="text-white" style="font-size:15px;">Adress</p>
                        </div>
                        <div class="col-4"style="padding-left:20px;">
                             {{ form_errors(form.adress) }}
                              {{ form_widget(form.adress,{'attr':{'onkeyup':"return forceLower(this)"}}) }}
                        </div>
                        <div class="col-2"  >
                            <label  class="text-white float-left" style="font-size:15px;">City </label>
                        </div>
                        <div class="col-4">
                            {{ form_errors(form.city) }}
                            {{ form_widget(form.city) }}
                        </div>
                    </div>

                    <div class="row" style="margin-top:20px;">
                      
                        <div class="col-1"  >
                            <label  class="text-white float-left" style="font-size:15px;">Birthday </label>
                        </div>
                        <div class="col-4">
                            {{ form_errors(form.datebirth) }}
                            {{ form_widget(form.datebirth, { 'attr': {'class': 'datepicker'} }) }}
                        </div>
                        <div class="col-2"  >
                            <label class="text-white float-left" style="font-size:15px;">Zipcode </label>
                        </div>
                        <div class="col-4">
                        {{ form_errors(form.zipcode) }}
                           {{ form_widget(form.zipcode ) }}
                        </div>
                    </div>
                    <div class="row" style="margin-top:20px;">
                        <div class="col-1"  >
                            <p class="text-white" style="font-size:15px;">phone</p>
                        </div>
                        <div class="col-4">
                            {{ form_errors(form.phone) }}
                            {{ form_widget(form.phone) }}

                            {#} {{form_widget(form.photoFile )}}#}
                        </div>
                        <div class="col-2"  >
                            <p class="text-white" style="font-size:15px;">Status</p>
                        </div>
                        <div class="col-4"style="padding-left:20px;">
                        {{ form_errors(form.Status) }}
                            {{form_widget(form.Status )}}
                        </div>
                    </div> 
                    {{ form_rest(form) }}

                    <div class="row" style="margin-top:41px;">
                        <div class="col-11">
                          <button type="submit" style="border: none;background: transparent;color: white; font-size: 30px;float: right;" class="">{{ button_label|default('Register') }}</button>
                            {#<a href="#" class="text-white float-right" style="font-size:30px;">Register</a>#}
                        </div>
                    </div>
                    
                </div></div></div>{{ form_start(form) }}
        </script>
         <link href="{{asset('asset/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css')}}" rel="stylesheet"/>
{#<script src="http://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>#}
<script src="{{asset('asset/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js')}}"></script>
 <script type="text/javascript">
 $('#user_datebirth').datepicker({
   todayHighlight: true,
   format: 'dd/mm/yyyy',
      
  });
 </script>
