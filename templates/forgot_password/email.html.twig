{% extends 'layout.html.twig' %}

{% block title %}ForgotPassword!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        select{
            text-transform: inherit; /* font-size: 3em; */
            /* font-weight: bold; */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
          }
        input{
            text-transform: inherit; /* font-size: 3em; */
            /* font-weight: bold; */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
          }
  </style>
{% endblock %}

{% block body %}


<div class="container mt--9 pb-5"style="margin-top:80px;" >
      <!-- Table -->
      <div class="row " style="margin-top:199px;">
      <div class="col-2"></div>
        <div class="col-lg-10 ">
           {{ form_start(form) }}
            <div class="row" style="margin-top:20px;margin-bottom:30px;" >
              <div class="col"><h4 class="text-white">Please enter your email to reset your password</h4></div>
            </div>
           <div class="row" >
              <div class="col-1">
                <h4 class="text-white">Email</h4>
                <div class="text text-danger">{{ form_errors(form.email) }}</div>
              </div>
              <div class="col-8">
                {{ form_widget(form.email,{'attr':{'class':'text-dark'},'type':'email'}) }}
              </div>
           </div>  
           <div class="row" style="margin-top:35px;">
              <div class="col-9" style="margin-top: 33px;">
              <button type="submit" style="border: none;background: transparent;color: white; font-size: 20px;float: right;" class="">{{ button_label|default('send password') }}</button></div>
           </div>
           {{ form_end(form) }}
        </div>
        </div>
  </diV>
             
   
{% endblock %}

