<form method="post" action="{{ path('club_messages_delete', {'id': club_message.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ club_message.id) }}">
    <button class="btn btn-danger float-right">Delete</button>
</form>
