{% extends 'base.html.twig' %}

{% block title %}Test {{ test.title}} {% endblock %}

{% block body %}
<h1 class="text-center inline-photo show-on-scroll">Test</h1>
<div class="container-fluid mt--7">
      <!-- Table -->
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="card shadow">
            <div class="card-header border-0">
              <h3 class="mb-0">Test list</h3>
            </div>
            <div class="table-responsive">
              <table class="table align-items-center table-flush">
                <thead class="thead-light"></thead>
        <tbody>
           
            <tr>
                <th>Title</th>
                <td>{{ test.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ test.description }}</td>
            </tr>
            <tr>
                <th>SupportPdf</th>
                <td>{{ test.supportPdf }}</td>
            </tr>
            <tr>
                <th>Deadline</th>
                <td>{{ test.deadline|date('Y-m-d h:i:s') }}</td>
            </tr>
            <tr>
                <th>SupportPdf</th>
                <td>{% if test.supportPdf|length and test.supportPdf is not null %}<a class="btn btn-info btn-icon btn-round btn-sm" href="{{ asset('uploads/test/supportsPdf/'~test.supportPdf) }}">  <i class="tim-icons icon-cloud-download-93"></i></a>{% else %} No pdf document {% endif %}</td>
            </tr>
        </tbody>
    </table>


<a href="{{ path('test_edit', {'id': test.id}) }}"class="btn btn-info  ">edit</a>
     <a href="{{ path('question_index',{'testId':test.id}) }}" class="btn btn-primary">{% if app.user.status == "Admin" %}edit questions{% else %}show questions{% endif %}</a><br/>
    {% if app.user.status == "Admin" %}
        {{ include('test/_delete_form.html.twig') }}
    {% endif %}
     </div>
     
     </div>
     {% if app.user.status == "Admin" %}
     	<a href="{{ path('testadmin_index') }}" class="btn btn-default float-left">back to list</a></div>
     {% else %}
	<a href="{{ path('test_selectCategory') }}"class="btn btn-default float-left">back to list</a></div>
     {% endif %}
    </div>
    </div>
    
{% endblock %}
