      <label for="inputEmail4">Sat Range</label>
        {{ form_widget(form.Satrange) }}
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Acceptance Rate</label>
        {{ form_widget(form.acceptance) }}
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Application Deadline</label>
        {{ form_widget(form.deadline) }}
    </div>
    
  </div>
  
  
  <br>
     <button class="btn btn-success float-right">{{ button_label|default('Save') }}</button>

                    </div>
                    
                    <div class="tab-pane" id="link3">
                       <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Graduation Rate</label>
        {{ form_widget(form.graduation) }}
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Employed 2 Years After Graduation</label>
        {{ form_widget(form.employed) }}
    </div>
  </div>
   <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Earnings 2 Years After Graduation</label>
       {{ form_widget(form.earning) }}
    </div></div>
    
         <br>
      <button class="btn btn-success float-right">{{ button_label|default('Update') }}</button>

                    </div>
                  </div>
                </div>
              </div>
            </div>
                  
                 {{form_end(form)}} 
                  
                  
