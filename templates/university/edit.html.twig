{% extends 'base.html.twig' %}

{% block title %}Edit University{% endblock %}

{% block body %}
    <h1 class="text-center">Edit University {{university.title}}</h1>
                  {{ form_start(form)}}
<div class="col-md-10 ml-auto col-xl-6 mr-auto">
              
              <!-- Nav tabs -->
              <div class="card">
                <div class="card-header">
                  <ul class="nav nav-tabs nav-tabs-primary" role="tablist">
                    <li class="nav-item">
                      <a class="nav-link active show" data-toggle="tab" href="#link1" role="tablist">
                        <i class="tim-icons icon-single-02"></i> About
                      </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" data-toggle="tab" href="#link2" role="tablist">
                        <i class="tim-icons icon-badge "></i> Admission
                      </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" data-toggle="tab" href="#link3" role="tablist">
                        <i class="tim-icons icon-paper"></i> After College.
                      </a>
                    </li>
                  </ul>
                </div>
                  
                   <div class="card-body">
                  <!-- Tab panes -->
                  <div class="tab-content tab-space">
                    <div class="tab-pane active show" id="link1">
 <div class="form-row">
    <div class="form-group col-md-6">
     <label class="form-control-label" >Title</label>
                        {{ form_widget(form.title) }}
    </div>
    <div class="form-group col-md-6">
      <label class="form-control-label" >Description</label>
                        {{ form_widget(form.description) }}
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label class="form-control-label" >Students number</label>
                        {{ form_widget(form.studentsnumber) }}
    </div>
    <div class="form-group col-md-6">
       <label class="form-control-label" >Rank</label>
                        {{ form_widget(form.rank) }}
    </div>
  </div>
  {{ form_widget(form.photoFile) }}
   <button class="btn btn-success float-right">{{ button_label|default('Save') }}</button>

 </div>

                    <div class="tab-pane" id="link2">
