{% extends 'base.html.twig' %}

{% block title %}Weeks index{% endblock %}

{% block body %}
    <h1>Weeks index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for week in weeks %}
            <tr>
                <td>{{ week.id }}</td>
                <td>{{ week.title }}</td>
                <td>
                    <a href="{{ path('weeks_show', {'id': week.id}) }}">show</a>
                    <a href="{{ path('weeks_edit', {'id': week.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('weeks_new') }}">Create new</a>
{% endblock %}
