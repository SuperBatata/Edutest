		</div>


		<nav class="main-menu ">
			<div class="settings"></div>

			{% if app.user.status == 'Teacher' %}
				{% include 'teacher.html.twig'%}
				{% block teacher %}{% endblock %}
			{% endif %}
			{% if  app.user.status == 'Student' %}
				{% include 'student.html.twig'%}
				{% block student %}{% endblock %}
			{% endif %}
			{% if  app.user.status == 'Admin' %}
				{% include 'admin.html.twig'%}
				{% block admin %}{% endblock %}
			{% endif %}
