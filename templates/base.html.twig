			<script>

				$(document).ready(function () {
$('.step').each(function (index, element) { // element == this
$(element).not('.active').addClass('done');
$('.done').html('<i class="icon-ok"></i>');
if ($(this).is('.active')) {
return false;
}
});
});

$(".dot").click(function () {
if ($(this).hasClass("active")) {
return;
} else {
$(".dot").removeClass("active");
$(this).addClass("active");
}
});
			</script>

		</body>

	</html>
