{% extends 'base.html.twig' %}

{% block title %}Configuration index{% endblock %}

{% block body %}
<section name='Title' style='margin-top:140px;'>
<div class="container">
        <div class="row justify-content-center">
          <h1 class="text-center"style="color:#B2273D;font-family:'Neou-bold';"> Email's Configuration
           <img src="{{asset('image/icones/1.png')}}" height="80px"width="80px" class="path">
           </h1>
            <div class="row row-grid justify-content-center">
         
            </div>
          </div>
        </div>
      </div>
      </section>
    <style>
      .bg-grise{
    display: block;
    width: 100%;
    height: calc(1.5em + .75rem + 2px);
    padding: .375rem .75rem;
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    border:none;
    background-color: rgba(241,242,242,0.7);

    transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
}
    </style>
<div class="container">
      <!-- Table -->
      <div class="row justify-content-center">
        <div class="col-lg-12">
        
              
            
            {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
          {% for message in app.flashes('delete') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
          {% for message in app.flashes('update') %}
            <div class="alert alert-warning" role="alert">
                {{ message }}
                </div>   
                {% endfor %}  
              
<div style="margin-right:50px;margin-left:50px;margin-top:50px;">
  <table style="border:none;" id="example"  class="table align-items-center table-flush  display dataTable">
            <thead >
            <tr>
                <th>Id</th>
                <th>Subject</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for configuration_email in configuration_emails %}
            <tr>
                <td>{{ configuration_email.id }}</td>
                <td>{{ configuration_email.subject }}</td>
                <td>
                    <a href="{{ path('configuration_email_show', {'id': configuration_email.id}) }}">show</a>
                    <a href="{{ path('configuration_email_edit', {'id': configuration_email.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('configuration_email_new') }}">Create new</a> <br/>
    <a href="{{ path('admin_send_email') }}">Send email for all students</a> <br />
    <a href="{{ path('admin_send_email_specified_students') }}">Send email to specified students</a> <br/>
            </div>
          </div>
        </div>
      </div>
</div>
{% endblock %}
