<form method="post" action="{{ path('club_delete', {'id': club.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ club.id) }}">
    {% if app.user.status == "Admin" or ( app.user.status == "Teacher" and club.head != null and club.head.id == app.user.teacher[0].id ) %}
        <button style="border:none;background-color:transparent;"class="redback over text-white float-left">Delete</button>
        
    {% endif %}
</form>
 