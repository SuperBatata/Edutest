{% extends 'base.html.twig' %}

{% block title %}Events index{% endblock %}

{% block body %}

<section class="section section-lg">
      <img src="{{asset('assetss/img/path4.png')}}" class="path">
     
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-12">
            <h1 class="text-center"></h1>
            <div class="row row-grid justify-content-center">
            
            </div>
          </div>
        </div>
      </div>
    </section>
    <div class="container">
    <div class="card card-plain" style="border:solid 1px;">
    <div class="card-header">
    <h1>Events index</h1>
    </div>
<div class="card-body">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>
                    <a href="{{ path('events_show', {'id': event.id}) }}">show</a>
                    <a href="{{ path('events_edit', {'id': event.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div class="card-footer">
    <a class="btn btn-info" href="{{ path('events_new')}}">Create new</a>
    </div></div>
{% endblock %}
